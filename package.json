{
	"name": "sahara",
	"version": "4.0.0",
	"description": "An inversion-of-control container for managing dependencies. Supports constructor, property and method injection",
	"keywords": [ "ioc", "inversion", "control", "dependency", "injection", "container" ],
	"license": "MIT",
	"files": [
		"src",
		"dist/sahara.js",
		"index.js"
	],

	"author": "Tommy Montgomery <tmont@tmont.com> (http://tmont.com/)",
	"repository": {
		"type": "git",
		"url": "https://github.com/tmont/sahara.git"
	},

	"dependencies": {
		"tarjan-graph": "0.3.0"
	},

	"devDependencies": {
		"browserify": "13.1.1",
		"mocha": "3.0.2",
		"semver": "5.3.0",
		"should": "11.1.0",
		"uglify-js": "2.7.4"
	},

	"scripts": {
		"test": "./node_modules/.bin/mocha -R dot tests/run",
		"compile": "node_modules/.bin/browserify --no-builtins --entry src/index.js --standalone sahara --detect-globals false > dist/sahara.js",
		"minify": "node_modules/.bin/uglifyjs --screw-ie8 --compress --mangle -- dist/sahara.js > dist/sahara.min.js",
		"build": "npm run compile && npm run minify"
	}
}
